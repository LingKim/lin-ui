{
    "extends": "@vue/tsconfig/tsconfig.web.json",
    "include": [
        "src/index.ts",
        "src/components/**/*",
    ],
    "compilerOptions": {
        "baseUrl": ".",
        "paths": {
            "@/*": [
                "./src/*"
            ]
        },
        "types": [
            "unplugin-vue-macros/macros-global" /* ... */
        ]
    },
    "references": [
        {
            "path": "./tsconfig.node.json"
        },
        {
            "path": "./tsconfig.app.json"
        }
    ]
}
